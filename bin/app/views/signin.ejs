<section class="ng-cloak" ng-controller="AuthenticationController">

	<div class="container">
		<div class="row header">
			<div class="col-md-12">
				<!--<h3 class="logo">
					<a href="/">Atlantic Ridge</a>
				</h3>-->
				<h4>Sign in to your account.</h4>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="wrapper clearfix">
					<div class="formy">
						<div class="row">
							<div class="col-md-12">
								<img class="profile-img" src="/images/logo.png" alt="">
								<form role="form" ng-submit="submit($event)">
							  		<div class="form-group">
							    		<label for="email">Email address</label>
							    		<input type="email" class="form-control" id="email" ng-model="formData.email" />
							  		</div>
							  		<div class="form-group">
							    		<label for="password">Password</label>
							    		<input type="password" class="form-control" id="password" ng-model="formData.password" />
							  		</div>
							  		<div class="checkbox">
							    		<label>
							      			<input type="checkbox"> Remember me
							    		</label>
							  		</div>
							  		<div class="submit">
							  			<button class="button-clear" name="login" type="submit">
								  			<span>Sign in to my account</span>
								  		</button>
							  		</div>
								</form>
							</div>
						</div>						
					</div>
				</div>
				<div class="already-account">
					Don't have an account?
					<a href="/signup">Create one here</a>
				</div>
			</div>
		</div>
	</div>
</section>
